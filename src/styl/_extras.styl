@font-face
  font-family: 'icomoon'
  src: url('../fonts/icomoon.eot?49kf2w');
  src: url('../fonts/icomoon.eot?49kf2w#iefix') format('embedded-opentype'),
    url('../fonts/icomoon.ttf?49kf2w') format('truetype'),
    url('../fonts/icomoon.woff?49kf2w') format('woff'),
    url('../fonts/icomoon.svg?49kf2w#icomoon') format('svg')
  font-weight: normal
  font-style: normal

.icon
  font-family: 'icomoon' !important
  speak: none
  font-style: normal
  font-weight: normal
  font-variant: normal
  text-transform: none
  line-height: 1
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

  &-facebook:before
    content: "\f09a"

  &-twitter:before
    content: "\f099"

  &-github:before
    content: "\f113"

  &-email:before
    content: "\f0e0"

[data-tooltip]
  &:after
    content: attr(data-tooltip)
    position: absolute
    bottom: -10px
    left: 50%
    transform: translate(-50%, 100%)
    padding: .5em
    background-color: rgba(#282828, .8)
    font-size: .8em
    white-space: nowrap
    letter-spacing: 0
    opacity: 0
    visibility: hidden
    transition: all .25s ease-in-out

  &:hover
    &:after
      opacity: 1
      visibility: visible

::selection
  background-color: rgba(#f1f1f1, .5)
  color: #181818