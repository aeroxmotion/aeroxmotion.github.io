doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Aero Motion Design | Web development
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')

    //- Favicon
    link(rel='icon', type='image/png', href='dist/favicon.png')

    //- Metas
    meta(name='author', content='AeroXMotion')
    meta(name='description', content='Official website')
    meta(name='keywords', content='motion, designer, web, development')

    //- Preloader
    style
      :clean-css
        .preloader {
          position: fixed;
          top: 0;
          right: 0;
          bottom: 0;
          left: 0;
          background-color: #111;
          z-index: 10000;
          -webkit-transition: all .5s linear;
                  transition: all .5s linear; }

        .preloader.is-hide {
          opacity: 0;
          visibility: hidden; }

        .preloader__loading {
          position: absolute;
          top: 50%;
          left: 50%;
          width: 50px;
          height: 50px;
          margin-left: -25px;
          margin-top: -25px; }

        .preloader__loading-circle {
          position: absolute;
          top: 0;
          right: 0;
          bottom: 0;
          left: 0;
          border-radius: 50%;
          border: 2px solid #fff;
          -webkit-animation: scale 1.5s ease-out infinite both;
                  animation: scale 1.5s ease-out infinite both; }

        .preloader__loading-circle:nth-child(2) {
          -webkit-animation-delay: -0.75s;
                  animation-delay: -0.75s; }

        @keyframes scale {
          0% {
            -webkit-transform: scale(0);
                    transform: scale(0);
            opacity: 0; }

          5% { opacity: 1; }

          100% {
            -webkit-transform: scale(1);
                    transform: scale(1);
            opacity: 0; }
        }

        @-webkit-keyframes scale {
          0% {
            -webkit-transform: scale(0);
                    transform: scale(0);
            opacity: 0; }

          5% { opacity: 1; }

          100% {
            -webkit-transform: scale(1);
                    transform: scale(1);
            opacity: 0; }
        }

    //- Stylesheets
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Poiret+One')
    link(rel='stylesheet', href='dist/css/styles.css')
